<% layout('layouts/layout') -%>

<h1>Vehicles</h1>

<div class="mb-3">
  <a href="/vehicles/create" class="btn btn-primary">Create Vehicle</a>
</div>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Vehicle Number</th>
      <th>License Plate</th>
      <th>Model</th>
      <th>Year</th>
      <th>Status</th>
      <th>Last Odometer</th>
    </tr>
  </thead>
  <tbody>
    <% vehicles.forEach(vehicle => { %>
      <tr>
        <td><%= vehicle.id %></td>
        <td><%= vehicle.vehicle_number %></td>
        <td><%= vehicle.licensePlate %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.status %></td>
        <td><%= vehicle.lastOdometer %></td>
      </tr>
    <% }); %>
  </tbody>
</table>